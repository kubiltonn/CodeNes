@model IEnumerable<code_MVC.Models.Announcement>
@{
    ViewData["Title"] = "Duyurular";
}
<h2>Duyurular</h2>
<p>
    <a class="btn btn-primary" asp-action="Create">Yeni Duyuru Ekle</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Başlık</th>
            <th>Tarih</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Title</td>
            <td>@item.Date.ToString("dd.MM.yyyy HH:mm")</td>
            <td>
                <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Detay</a>
                <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a>
                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
            </td>
        </tr>
    }
    </tbody>
</table> 