@model List<code_MVC.Models.StudentDto>
@{
    ViewData["Title"] = "Öğrenciler (API)";
}
<h2 class="mb-4">Öğrenciler (API)</h2>
<p>
    <a class="btn btn-primary" asp-action="Create">Yeni Öğrenci Ekle</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Adı</th>
            <th>Email</th>
            <th>Telefon</th>
            <th>Kayıt Tarihi</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Email</td>
            <td>@item.Phone</td>
            <td>
                @{
                    DateTime regDate;
                    if (DateTime.TryParse(item.RegistrationDate, out regDate))
                    {
                        @regDate.ToString("dd.MM.yyyy")
                    }
                }
            </td>
            <td>
                <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Detay</a>
                <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a>
                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
            </td>
        </tr>
    }
    </tbody>
</table> 