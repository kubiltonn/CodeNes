@model code_MVC.Models.StudentDto
@{
    ViewData["Title"] = "Öğrenci Ekle (API)";
}
<div class="d-flex justify-content-center align-items-center min-vh-100" style="padding-bottom:3rem;">
    <div style="background:#23272F; border-radius:16px; box-shadow:0 2px 12px rgba(0,0,0,0.15); padding:1.5rem 1.2rem 1rem 1.2rem; min-width:220px; max-width:400px; width:100%; overflow:auto;">
        <h2 class="mb-3" style="color:#4F8EF7; font-size:1.5rem;">Öğrenci Ekle (API)</h2>
        <form asp-action="Create" method="post">
            <div class="mb-2">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger" style="font-size:0.95rem;"></span>
            </div>
            <div class="mb-2">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger" style="font-size:0.95rem;"></span>
            </div>
            <div class="mb-2">
                <label asp-for="Phone" class="form-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger" style="font-size:0.95rem;"></span>
            </div>
            <div class="mb-2">
                <label asp-for="RegistrationDate" class="form-label"></label>
                <input asp-for="RegistrationDate" class="form-control" type="date" />
                <span asp-validation-for="RegistrationDate" class="text-danger" style="font-size:0.95rem;"></span>
            </div>
            <div class="d-grid gap-2 mt-3">
                <button type="submit" class="btn btn-primary">Kaydet</button>
                <a asp-action="Index" class="btn btn-secondary">İptal</a>
            </div>
        </form>
    </div>
</div> 