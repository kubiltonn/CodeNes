@model code_MVC.Models.CourseDto
@{
    ViewData["Title"] = "Kurs Ekle (API)";
}
<div class="d-flex justify-content-center align-items-center" style="min-height:calc(100vh - 120px); margin-bottom:2rem;">
    <div style="background:#23272F; border-radius:16px; box-shadow:0 2px 12px rgba(0,0,0,0.15); padding:1.5rem 1.2rem 1rem 1.2rem; min-width:220px; max-width:400px; width:100%;">
        <h2 class="mb-3" style="color:#4F8EF7; font-size:1.5rem;">Kurs Ekle (API)</h2>
        <form asp-action="Create" method="post">
            <div class="mb-2">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger" style="font-size:0.95rem;"></span>
            </div>
            <div class="mb-2">
                <label asp-for="Description" class="form-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger" style="font-size:0.95rem;"></span>
            </div>
            <div class="mb-2">
                <label asp-for="DurationWeeks" class="form-label"></label>
                <input asp-for="DurationWeeks" class="form-control" />
                <span asp-validation-for="DurationWeeks" class="text-danger" style="font-size:0.95rem;"></span>
            </div>
            <div class="d-grid gap-2 mt-3">
                <button type="submit" class="btn btn-primary">Kaydet</button>
                <a asp-action="Index" class="btn btn-secondary">Ä°ptal</a>
            </div>
        </form>
    </div>
</div> 