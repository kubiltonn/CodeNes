@model List<code_MVC.Models.EnrollmentDto>
@{
    ViewData["Title"] = "Kayıtlar (API)";
}
<h2 class="mb-4">Kayıtlar (API)</h2>
<p>
    <a class="btn btn-primary" asp-action="Create">Yeni Kayıt Ekle</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Öğrenci Id</th>
            <th>Kurs Id</th>
            <th>Kayıt Tarihi</th>
            <th>Durum</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.StudentId</td>
            <td>@item.CourseId</td>
            <td>@item.EnrollmentDate</td>
            <td>@item.Status</td>
            <td>
                <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Detay</a>
                <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a>
                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
            </td>
        </tr>
    }
    </tbody>
</table> 