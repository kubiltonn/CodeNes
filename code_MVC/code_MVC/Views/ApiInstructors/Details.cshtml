@model code_MVC.Models.InstructorDto
@{
    ViewData["Title"] = "Eğitmen Detay";
}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">
            <div class="card bg-dark text-light shadow-lg">
                <div class="card-header border-0 pb-0 bg-dark">
                    <h3 class="mb-0">Eğitmen Detay</h3>
                </div>
                <div class="card-body">
                    <dl class="row mb-4">
                        <dt class="col-sm-4">Ad Soyad</dt>
                        <dd class="col-sm-8">@Model.Name</dd>
                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.Email</dd>
                        <dt class="col-sm-4">Uzmanlık Alanı</dt>
                        <dd class="col-sm-8">@Model.Specialty</dd>
                    </dl>
                    <div class="d-flex justify-content-between align-items-center mt-4">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Düzenle</a>
                        <a asp-action="Index" class="btn btn-outline-light">Geri</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    body { background: #181a1b; }
    .card.bg-dark { background: #23272b !important; }
    .btn { font-weight: 500; }
</style> 