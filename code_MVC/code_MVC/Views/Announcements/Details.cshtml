@model code_MVC.Models.Announcement
@{
    ViewData["Title"] = "Duyuru Detay";
}
<h2>Duyuru Detay</h2>
<div>
    <dl class="row">
        <dt class="col-sm-2">Başlık</dt>
        <dd class="col-sm-10">@Model.Title</dd>
        <dt class="col-sm-2">İçerik</dt>
        <dd class="col-sm-10">@Model.Content</dd>
        <dt class="col-sm-2">Tarih</dt>
        <dd class="col-sm-10">@Model.Date.ToString("dd.MM.yyyy HH:mm")</dd>
    </dl>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Düzenle</a>
    <a asp-action="Index" class="btn btn-secondary">Geri</a>
</div> 